<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tv_qnum"
        android:layout_width="150dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/main_tv_Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/Start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_b_delete"
        android:layout_alignRight="@+id/main_b_delete"
        android:layout_below="@+id/tv_qnum"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:text="@string/main_b_Start"
        android:textSize="@dimen/textsize1" />
	
    <Button
        android:id="@+id/Exit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_b_delete"
        android:layout_alignRight="@+id/main_b_delete"
        android:layout_below="@+id/main_b_delete"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:text="@string/main_b_exit"
        android:textSize="@dimen/textsize1" />

    <Button
        android:id="@+id/main_b_delete"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quizQ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/main_b_delete"
        android:textSize="@dimen/textsize1" />

    <Button
        android:id="@+id/quizQ"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_b_delete"
        android:layout_alignRight="@+id/Start"
        android:layout_below="@+id/Start"
        android:layout_marginTop="10dp"
        android:minWidth="200dp"
        android:text="@string/main_b_create"
        android:textSize="@dimen/textsize1" />

</RelativeLayout>
